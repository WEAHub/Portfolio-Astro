---
import Link from "./Link.astro";
import Project from "./Project.astro";
import Section from "./Section.astro";
import { getCollection } from 'astro:content';
import FadeInSection from './FadeInSection.tsx'
const projectList = await getCollection('projects')
---
<Section id="projects" label="Mis proyectos">
  <div class="sticky top-0 z-20 -mx-6 mb-4 w-screen bg-slate-900/75 px-6 py-5 backdrop-blur md:-mx-12 md:px-12 lg:sr-only lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0 lg:py-0 lg:opacity-0"><h2 class="text-sm font-bold uppercase tracking-widest text-slate-200 lg:sr-only">Proyectos</h2></div>
  <ol class="group/list">
    {
      projectList.map(project => (
        <li class="mb-12">
          <FadeInSection client:only>
            <Project project={project}></Project>
          </FadeInSection>
        </li>    
      ))
    }
  </ol>
  <div class="mt-12">
    <Link url="https://github.com/WEAHub?tab=repositories" label="Ver todos los repositorios"/>
  </div>
  
</Section>